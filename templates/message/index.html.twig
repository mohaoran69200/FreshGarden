{% extends 'base.html.twig' %}

{% block title %}Messagerie{% endblock %}

{% block body %}

    <main>
        <section class="message-section">
            <h1>Messagerie</h1>
            <h2>Boîte de réception</h2>
            <p>Vous avez reçu {{ app.user.received|length }} messages</p>

            <table class="message-table">
                <thead>
                <tr>
                    <th>De</th>
                    <th>Sujet</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for message in app.user.received %}
                    <tr class="{% if message.isRead == 0 %}unread{% else %}read{% endif %}">
                        <td>
                            {% if message.sender.userProfile.userName is not empty %}
                                {{ message.sender.userProfile.userName }}
                            {% elseif message.sender.userProfile.firstName is not empty %}
                                {{ message.sender.userProfile.firstName }}
                            {% else %}
                                {{ message.sender.email }}
                            {% endif %}
                        </td>
                        <td>
                            <a href="{{ path('message_read', {id: message.id}) }}">{{ message.title }}</a>
                        </td>
                        <td>
                            {{ message.createdAt|date('d/m/Y H:i') }}
                        </td>
                        <td>
                            <a href="{{ path('message_read', {id: message.id}) }}" class="view-btn">Voir</a>
                            <form action="{{ path('message_delete', {id: message.id}) }}" method="post" class="delete-form">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ message.id) }}">
                                <button type="submit" class="delete-btn">Supprimer</button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">Aucun message reçu.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            
{#            <div class="send-message">#}
{#                <a href="{{ path('message_send', {id: app.user.id}) }}" class="send-btn">Envoyer un message</a>#}
{#            </div>#}
        </section>
    </main>
{% endblock %}
