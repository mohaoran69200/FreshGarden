{% extends 'base.html.twig' %}

{% block title %}Acceuil - Fresh Garden
{% endblock %}

{% block body %}
	<section class="home-presentation">
		<div class="title">
			<h1>Votre marché local en ligne</h1>
			<p>Vendez vos récoltes et achetez les produits frais de vos voisins.</p>
			<div class="btn">
				<a href="{{ path('app_product_new') }}" class="btn-vente">Vendez</a>
				<a href="{{ path('app_product_new') }}" class="btn-achat">Achetez</a>
			</div>
		</div>
		<div class="img-home-container">
			<img src="{{asset('images/img_header.png')}}" alt="image d'acceuil" class="img-home">
		</div>
	</section>

	<main>
		<section>
			<h2>Annonces</h2>
			<div>
				{% for product in products %}
					{% include '_partials/product/_cardProduct.html.twig' %}
				{% endfor %}
			</div>
		</section>
	</main>

{% endblock %}
