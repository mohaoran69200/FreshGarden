<div class="user-card card">
	<img src="{{ vich_uploader_asset(user.userProfile) }}" alt="Photo de profil">
	<div>
		<h3>{{ user.email }}</h3>
		<span>{{ user.userProfile.userName ?: user.userProfile.firstName }}</span>
		<span>{{ user.userProfile.city }}</span>

		<div class="actions">
			<a href="{{ path('message_send', { id: user.id }) }}">
				<button>Contacter</button>
			</a>
			<button id="favorite-button" onclick="window.location.href='{{ path('app_favorite_toggle_user', {id: user.id}) }}'">
				<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-7">
					<path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z"/>
				</svg>
			</button>
		</div>

		<div class="ads-list">
			<h4>Ses annonces :</h4>
			<ul>
				{% for product in user.products %}
					<li><a href="{{ path('app_product_show', { id: product.id }) }}">{{ product.name }} - {{ product.price }}â‚¬</a></li>
				{% else %}
					<li>Aucune annonce disponible.</li>
				{% endfor %}
			</ul>
		</div>
	</div>
</div>
