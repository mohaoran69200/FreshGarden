<div>
	<div>
		<div>
			{# Vérifie si le profil utilisateur et l'image sont définis avant d'afficher l'image #}
			{% if user.userProfile and user.userProfile.imageFile %}
				<img src="{{ vich_uploader_asset(user.userProfile, 'imageFile') }}" alt="Photo de profil">
			{% endif %}
		</div>
		<h3>{{ user.email }}</h3>
		<span>{{ user.userProfile ? user.userProfile.lastName : '' }}</span>

		{# Affiche les boutons de modification et suppression uniquement pour l'utilisateur connecté #}
		{% if app.user and app.user.id == user.id %}
			<a href="{{ path('app_user_edit_user', { id: user.id }) }}">
				<button>Modifier</button>
			</a>

			<form action="{{ path('app_user_remove', { id: user.id }) }}" method="post">
				<input type="hidden" name="_method" value="DELETE">
				<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
				<button type="submit">Supprimer mon compte</button>
			</form>
		{% endif %}
	</div>
</div>
