<!DOCTYPE html>
<html lang="fr">
<head>
	<title>User Card</title>
	<style>
		.user-card {
			border: 1px solid #ddd;
			border-radius: 8px;
			box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
			background-color: #fff;
			margin: 20px;
			padding: 20px;
			width: 300px;
			text-align: center;
			overflow: hidden;
			transition: transform 0.2s, box-shadow 0.2s;
		}

		.user-card:hover {
			transform: translateY(-5px);
			box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
		}

		.user-card img {
			width: 100%;
			height: 200px;
			object-fit: cover;
			border-radius: 50%;
			margin-bottom: 15px;
		}

		.user-card h3 {
			font-size: 1.25rem;
			margin: 10px 0;
		}

		.user-card span {
			display: block;
			margin: 5px 0;
			font-size: 1rem;
			color: #333;
		}

		.user-card .actions {
			margin-top: 15px;
		}

		.user-card button {
			background-color: #007bff;
			color: #fff;
			border: none;
			padding: 10px 15px;
			border-radius: 5px;
			cursor: pointer;
			font-size: 0.9rem;
			margin: 0 5px;
			transition: background-color 0.2s;
		}

		.user-card button:hover {
			background-color: #0056b3;
		}

		.user-card form {
			display: inline;
		}

		.user-card form button {
			background-color: #dc3545;
		}

		.user-card form button:hover {
			background-color: #c82333;
		}

		.ads-list {
			margin-top: 15px;
			text-align: left;
		}

		.ads-list h4 {
			font-size: 1.1rem;
			margin-bottom: 10px;
		}

		.ads-list ul {
			list-style-type: none;
			padding: 0;
		}

		.ads-list li {
			margin-bottom: 10px;
		}
	</style>
</head>
<body>
<div class="user-card">
	<div>
		{# Affichage de la photo de profil si elle est définie #}
		{% if user.userProfile and user.userProfile.imageName %}
			<img src="{{ vich_uploader_asset(user.userProfile) }}" alt="Photo de profil">
		{% endif %}
	</div>

	{# Affichage de l'email de l'utilisateur #}
	<h3>{{ user.email }}</h3>

	{# Affichage du nom d'utilisateur ou du prénom #}
	<span>
		{% if user.userProfile.userName %}
			{{ user.userProfile.userName }}
		{% else %}
			{{ user.userProfile.firstName }}
		{% endif %}
	</span>

	{# Affichage de la ville de l'utilisateur #}
	<span>{{ user.userProfile.city }}</span>

	{# Bouton Contacter pour envoyer un message à l'utilisateur #}
	<div class="actions">
		<a href="{{ path('message_send', { id: user.id }) }}">
			<button>Contacter</button>
		</a>
	</div>

	<!-- Bouton Favoris pour utilisateur -->
	<button id="favorite-button" onclick="window.location.href='{{ path('app_favorite_add_user', {id: user.id}) }}'">
		<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-7">
			<path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z"/>
		</svg>
	</button>


	{# Affichage des annonces de l'utilisateur #}
	<div class="ads-list">
		<h4>Ses annonces :</h4>
		<ul>
			{% for product in user.products %}
				<li>
					<a href="{{ path('app_product_show', { id: product.id }) }}">
						{{ product.name }} - {{ product.price }}€
					</a>
				</li>
			{% else %}
				<li>Aucune annonce disponible.</li>
			{% endfor %}
		</ul>
	</div>

	{# Affiche les boutons de modification et suppression uniquement pour l'utilisateur connecté #}
	{% if app.user and app.user.id == user.id %}
		<div class="actions">
			<a href="{{ path('app_user_edit_user', { id: user.id }) }}">
				<button>Modifier</button>
			</a>

			<form action="{{ path('app_user_remove', { id: user.id }) }}" method="post">
				<input type="hidden" name="_method" value="DELETE">
				<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
				<button type="submit">Supprimer mon compte</button>
			</form>
		</div>
	{% endif %}
</div>
</body>
</html>
