<div class="product-card card">

	<div class="product-details-container">
		<a href="{{ path('app_product_show', { id: product.id }) }}">
			<div>
				<img src="{{ vich_uploader_asset(product.image) }}" alt="Image du produit">
			</div>
			<div class="product-info">
				<h3>
					{{ product.name }}
				</h3>
				<span>
					{{ product.price }}€ / {{ product.unit.value }}
				</span>
				<span>
					{{ product.stock }} {{ product.unit.value }} en stock
				</span>
			</div>
		</a>
	</div>

	<div class="user-details-container">
		<a href="{{ path('app_user_show', { id: product.user.id }) }}">
			<span>
				{{ product.user.userProfile.userName ?: product.user.userProfile.firstName ?: product.user.email }}
			</span>
		</a>
		<span>
					<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
						<path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
						<path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z" />
					</svg>

			{{ product.user.userProfile.city }}
		</span>
		<span>
			<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
  				<path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 0 1 1.04 0l2.125 5.111a.563.563 0 0 0 .475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 0 0-.182.557l1.285 5.385a.562.562 0 0 1-.84.61l-4.725-2.885a.562.562 0 0 0-.586 0L6.982 20.54a.562.562 0 0 1-.84-.61l1.285-5.386a.562.562 0 0 0-.182-.557l-4.204-3.602a.562.562 0 0 1 .321-.988l5.518-.442a.563.563 0 0 0 .475-.345L11.48 3.5Z" />
			</svg>

			Note /5
		</span>
	</div>

	<div class="actions">
		{% if app.user and app.user != product.user %}
			<!-- Afficher les boutons Favoris et Ajouter au panier uniquement si le produit n'appartient pas à l'utilisateur connecté -->
			<form action="{{ path('app_favorite_toggle_product', { id: product.id }) }}" method="post">
				<input type="hidden" name="_token" value="{{ csrf_token(isFavorite ? 'remove_product_' ~ product.id : 'add_product_' ~ product.id) }}">
				<button type="submit" class="favorite-button" aria-label="{{ isFavorite ? 'Retirer des favoris' : 'Ajouter aux favoris' }}">
					<svg xmlns="http://www.w3.org/2000/svg" fill="{{ isFavorite ? 'red' : 'none' }}" viewBox="0 0 24 24" stroke-width="1.5" stroke="{{ isFavorite ? 'red' : 'black' }}" class="size-7">
						<path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z"/>
					</svg>
				</button>
			</form>
			<a href="{{ path('cart_add', { id: product.id }) }}">
				<button>Ajouter au panier</button>
			</a>
		{% endif %}

		{% if app.user and app.user == product.user %}
			<!-- Afficher les boutons Modifier et Supprimer uniquement si le produit appartient à l'utilisateur connecté -->
			<div class="actions">
				<a href="{{ path('app_product_update', { id: product.id }) }}">
					<button>Modifier</button>
				</a>
				<form action="{{ path('app_product_remove', { id: product.id }) }}" method="post">
					<input type="hidden" name="_method" value="DELETE">
					<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
					<button type="submit">Supprimer</button>
				</form>
			</div>
		{% endif %}

	</div>
</div>
