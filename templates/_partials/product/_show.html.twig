<!DOCTYPE html>
<html lang="fr">
<head>
    <title>Product Show</title>
    <style>
        .page-container {
            display: flex;
            justify-content: center;
            align-items: flex-start;
            padding: 20px;
            gap: 30px;
            max-width: 1200px;
            margin: 0 auto;
        }

        .product-card {
            border: 1px solid #ddd;
            border-radius: 12px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
            background-color: #fff;
            padding: 20px;
            width: 600px;
            text-align: center;
            overflow: hidden;
            transition: transform 0.2s, box-shadow 0.2s;
        }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.2);
        }

        .product-card img {
            width: 100%;
            height: 400px;
            object-fit: cover;
            border-radius: 12px;
            margin-bottom: 15px;
        }

        .product-card h3 {
            font-size: 2rem;
            margin: 10px 0;
            color: #333;
        }

        .product-card span {
            display: block;
            margin: 5px 0;
            font-size: 1.2rem;
            color: #555;
        }

        .product-card .actions {
            margin-top: 20px;
            display: flex;
            justify-content: space-between;
            gap: 10px;
        }

        .product-card .actions button {
            flex: 1;
            padding: 10px 15px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 1rem;
            transition: background-color 0.2s;
        }

        /* Bouton "Ajouter au panier" */
        #add-to-cart {
            background-color: #007bff;
            color: #fff;
            border: none;
        }

        #add-to-cart:hover {
            background-color: #0056b3;
        }

        /* Bouton "Ajouter aux favoris" */
        #favorite-button-page {
            background-color: #28a745; /* Vert */
            color: #fff;
            border: none;
        }

        #favorite-button-page:hover {
            background-color: #218838;
        }

        /* Sélecteur de quantité */
        .product-card select {
            padding: 10px;
            font-size: 1rem;
            border-radius: 5px;
            border: 1px solid #ccc;
            margin-top: 15px;
            width: 100%;
        }

        .user-card {
            border: 1px solid #ddd;
            border-radius: 12px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
            background-color: #fff;
            padding: 20px;
            width: 300px;
            text-align: center;
        }

        .user-card h3 {
            font-size: 1.5rem;
            margin-bottom: 10px;
            color: #333;
        }

        .user-card span {
            display: block;
            margin-bottom: 8px;
            font-size: 1.2rem;
            color: #555;
        }

        /* Bouton "Envoyer un message" */
        #message-button-page {
            background-color: #6c757d; /* Gris */
            color: white;
            border: none;
            padding: 10px 15px;
            font-size: 1rem;
            border-radius: 5px;
            cursor: pointer;
            margin-top: 15px;
            transition: background-color 0.3s;
            width: 100%;
        }

        #message-button-page:hover {
            background-color: #5a6268;
        }

        /* Assurez-vous que les boutons sont visibles */
        .actions button {
            min-width: 150px;
        }

    </style>
</head>
<body>
<div class="page-container">
    <!-- Carte produit -->
    <div class="product-card">
        <img src="{{ vich_uploader_asset(product.image) }}" alt="Image du produit">
        <h3>{{ product.name }}</h3>
        <span>{{ product.price }}€ / {{ product.unit.value }}</span>
        <span>{{ product.stock }} {{ product.unit.value }} en stock</span>

        <!-- Sélection de la quantité -->
        <label for="quantity">Quantité :</label>
        <select id="quantity" name="quantity">
            {% for i in 1..product.stock %}
                <option value="{{ i }}">{{ i }}</option>
            {% endfor %}
        </select>

        <!-- Actions : Ajouter au panier et Favoris -->
        <div class="actions">
            <button id="add-to-cart" onclick="window.location.href='{{ path('cart_add', {id: product.id}) }}'">Ajouter au panier</button>
            <button id="favorite-button-page" onclick="window.location.href='{{ path('app_favorite_add_product', {id: product.id}) }}'">Ajouter aux favoris</button>
        </div>
    </div>

    <!-- Carte utilisateur -->
    <div class="user-card">
        <h3>
            {% if product.user.userProfile.userName is not empty %}
                {{ product.user.userProfile.userName }}
            {% else %}
                {{ product.user.userProfile.firstName }}
            {% endif %}
        </h3>
        <span>{{ product.user.userProfile.city }}</span>

        <!-- Bouton pour envoyer un message -->
        <button id="message-button-page" onclick="window.location.href='{{ path('message_send', { id: product.user.id }) }}'">Envoyer un message</button>
    </div>
</div>
</body>
</html>
