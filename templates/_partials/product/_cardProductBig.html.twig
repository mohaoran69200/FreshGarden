<div class="product-card card">
    <a href="{{ path('app_product_show', { id: product.id }) }}">
        <img src="{{ vich_uploader_asset(product.image) }}" alt="Image du produit">
        <h3>{{ product.name }}</h3>
        <span>{{ product.price }}â‚¬ / {{ product.unit.value }}</span>
        <span>{{ product.stock }} {{ product.unit.value }} en stock</span>
    </a>
    <a href="{{ path('app_user_show', { id: product.user.id }) }}">
        <span>{{ product.user.userProfile.userName ?: product.user.userProfile.firstName ?: product.user.email }}</span>
        <span>{{ product.user.userProfile.city }}</span>
    </a>

    <div class="actions">
        <form action="{{ path('app_favorite_toggle_product', { id: product.id }) }}" method="post">
            <input type="hidden" name="_token" value="{{ csrf_token(isFavorite ? 'remove_product_' ~ product.id : 'add_product_' ~ product.id) }}">
            <button type="submit" class="favorite-button" aria-label="{{ isFavorite ? 'Retirer des favoris' : 'Ajouter aux favoris' }}">
                <svg xmlns="http://www.w3.org/2000/svg" fill="{{ isFavorite ? 'currentColor' : 'none' }}" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-7">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z"/>
                </svg>
            </button>
        </form>

        <a href="{{ path('cart_add', { id: product.id }) }}">
            <button>Ajouter au panier</button>
        </a>
    </div>

    {% if app.user and app.user == product.user %}
        <div class="actions">
            <a href="{{ path('app_product_update', { id: product.id }) }}">
                <button>Modifier</button>
            </a>
            <form action="{{ path('app_product_remove', { id: product.id }) }}" method="post">
                <input type="hidden" name="_method" value="DELETE">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                <button type="submit">Supprimer</button>
            </form>
        </div>
    {% endif %}
</div>
