{% extends 'base.html.twig' %}

{% block title %}
	Connexion
{% endblock %}

{% block body %}
	<div class="form-container">
		<form method="post" action="{{ path('login') }}">
			{% if error %}
				<div class="error-message">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			{% if app.user %}
				<div class="form-footer">
					{{ app.user.userIdentifier }},
					<a href="{{ path('logout') }}" class="btn btn-primary">Se déconnecter</a>
				</div>
			{% else %}
				<h1 class="h3 mb-3 font-weight-normal">Se connecter</h1>
				<div class="form-group">
					<label for="username">Email</label>
					<input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
				</div>
				<div class="form-group">
					<label for="password">Mot de passe</label>
					<input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
				</div>
				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				<button class="btn" type="submit">Se connecter</button>
				<p><a href="{{ path('app_forgot_password_request') }}" class="link-button">Mot de passe oublié</a></p>
				<p>Vous n'avez pas de compte? <a href="{{ path('register') }}" class="link-button">Inscrivez-vous ici</a></p>
			{% endif %}
		</form>
	</div>
{% endblock %}
