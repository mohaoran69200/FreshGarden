{% extends 'base.html.twig' %}

{% block title %}
	Connexion
{% endblock %}

{% block body %}
	<style>
		.form-container {
			max-width: 700px;
			margin: 0 auto;
			padding: 20px;
			border-radius: 8px;
			box-shadow: 0 1px 6px 1px #454955;
		}

		.form-container h1 {
			text-align: center;
			margin-bottom: 20px;
		}

		.form-container label {
			display: block;
			margin-bottom: 8px;
			font-weight: bold;
		}

		.form-container input {
			width: 100%;
			padding: 10px;
			margin-bottom: 20px;
			border: 1px solid #ddd;
			border-radius: 4px;
		}

		.form-container .btn {
			display: flex;
			justify-content: center;
			align-items: center;
			width: 100%;
			padding: 10px;
			border: none;
			border-radius: 4px;
			cursor: pointer;
			font-size: 16px;
			background-color: #72B01D;
			color: white;
			margin-top: 10px;
			margin-bottom: 20px;
		}

		.form-container .alert {
			color: red;
			margin-bottom: 20px;
			text-align: center;
		}

		.btn:hover {
			background-color: #3F7D20;
		}

		@media(max-width: 1024px) and(min-width: 768px) {
			.form-container {
				width: 80%;
			}
		}
		@media(max-width: 768px) {
			.form-container {
				width: 90%;
			}
		}
	</style>

	<div class="form-container">
		<form method="post" action="{{ path('login') }}">
			{% if error %}
				<div class="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			{% if app.user %}
				<div class="mb-3">
					{{ app.user.userIdentifier }},
					<a href="{{ path('logout') }}" class="btn btn-danger">Se déconnecter</a>
				</div>
			{% else %}
				<h1 class="h3 mb-3 font-weight-normal">Se connecter</h1>
				<label for="username">Email</label>
				<input type="email" value="{{ last_username }}" name="_username" id="username" autocomplete="email" required autofocus>
				<label for="password">Mot de passe</label>
				<input type="password" name="_password" id="password" autocomplete="current-password" required>
				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				<button class="btn" type="submit">Se connecter</button>
				<p><a href="{{ path('app_forgot_password_request') }}">Mot de passe oublié</a> </p>
				<p>Vous n'avez pas de compte? <a href="{{ path('register') }}">Inscrivez-vous ici</a> </p>
				
			{% endif %}
		</form>
	</div>
{% endblock %}
