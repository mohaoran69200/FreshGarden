    <div id="mobile-menu" class="mobile-menu">
        <button id="close-menu" class="close-menu">&times;</button>

        <ul class="pages">
            <li>
                <a href="{{ path('home') }}">Acceuil</a>
            </li>
            <li>
                <a href="{{ path('app_product_fruits') }}">Fresh Garden</a>
            </li>
            <li>
                <a href="{{ path('app_product_legumes') }}">Utilisateurs</a>
