{% extends 'admin/base_admin.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}
    <div class="user-list-container">
        <h1>Liste des utilisateurs</h1>

        <!-- Utilisateurs actifs -->
        <div class="user-section">
            <h2>Utilisateurs actifs</h2>
            <table class="user-table">
                <thead>
                <tr>
                    <th>Pseudo</th>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Code Postal</th>
                    <th>Ville</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    {% if not user.isBanned %}
                        <tr>
                            {% if user.userProfile is not null %}
                                <td>{{ user.userProfile.userName }}</td>
                                <td>{{ user.userProfile.lastName }}</td>
                                <td>{{ user.userProfile.firstName }}</td>
                                <td>{{ user.userProfile.postalCode }}</td>
                                <td>{{ user.userProfile.city }}</td>
                            {% else %}
                                <td colspan="5">Profil non disponible</td>
                            {% endif %}
                            <td>{{ user.email }}</td>
                            <td>
                                <a class="btn btn-view" href="{{ path('app_user_show', {'id': user.id}) }}">Voir</a>
                                <a class="btn btn-edit" href="{{ path('app_user_edit_user', {'id': user.id}) }}">Éditer</a>
                                <a class="btn btn-ban" href="{{ path('app_admin_user_ban', {'id': user.id}) }}">Bannir</a>
                                <a class="btn btn-delete" href="{{ path('app_user_remove', {'id': user.id}) }}"
                                   onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?')">Supprimer</a>
                            </td>
                        </tr>
                    {% endif %}
                {% endfor %}
                </tbody>
            </table>
        </div>

        <!-- Utilisateurs bannis -->
        <div class="user-section">
            <h2>Utilisateurs bannis</h2>
            <table class="user-table">
                <thead>
                <tr>
                    <th>Pseudo</th>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Code Postal</th>
                    <th>Ville</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for bannedUser in bannedUsers %}
                    <tr>
                        {% if bannedUser.userProfile is not null %}
                            <td>{{ bannedUser.userProfile.userName }}</td>
                            <td>{{ bannedUser.userProfile.lastName }}</td>
                            <td>{{ bannedUser.userProfile.firstName }}</td>
                            <td>{{ bannedUser.userProfile.postalCode }}</td>
                            <td>{{ bannedUser.userProfile.city }}</td>
                        {% else %}
                            <td colspan="5">Profil non disponible</td>
                        {% endif %}
                        <td>{{ bannedUser.email }}</td>
                        <td>
                            <a class="btn btn-view" href="{{ path('app_user_show', {'id': bannedUser.id}) }}">Voir</a>
                            <a class="btn btn-edit" href="{{ path('app_user_edit_user', {'id': bannedUser.id}) }}">Éditer</a>
                            <a class="btn btn-unban" href="{{ path('app_admin_user_unban', {'id': bannedUser.id}) }}">Débannir</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
