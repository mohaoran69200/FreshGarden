{% extends 'admin/base_admin.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}
    <div class="user-list-container">
        <h1>Liste des utilisateurs</h1>

        <!-- Utilisateurs actifs -->
        <div class="user-section">
            <h2>Utilisateurs actifs</h2>
            <table class="user-table">
                <thead>
                <tr>
                    <th>Pseudo</th>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Code Postal</th>
                    <th>Ville</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    {% if not user.isBanned %}
                        <tr>
                            <td>{{ user.userProfile.userName }}</td>
                            <td>{{ user.userProfile.lastName }}</td>
                            <td>{{ user.userProfile.firstName }}</td>
                            <td>{{ user.userProfile.postalCode }}</td>
                            <td>{{ user.userProfile.city }}</td>
                            <td>{{ user.email }}</td>
                            <td>
                                <a class="btn btn-view" href="{{ path('app_admin_user_show', {'id': user.id}) }}">Voir</a>
                                <a class="btn btn-edit" href="{{ path('app_admin_user_edit', {'id': user.id}) }}">Éditer</a>
                                <a class="btn btn-ban" href="{{ path('app_admin_user_ban', {'id': user.id}) }}">Bannir</a>
                            </td>
                        </tr>
                    {% endif %}
                {% endfor %}
                </tbody>
            </table>
        </div>

        <!-- Utilisateurs bannis -->
        <div class="user-section">
            <h2>Utilisateurs bannis</h2>
            <table class="user-table">
                <thead>
                <tr>
                    <th>Pseudo</th>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Code Postal</th>
                    <th>Ville</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for bannedUser in bannedUsers %}
                    <tr>
                        <td>{{ bannedUser.userProfile.userName }}</td>
                        <td>{{ bannedUser.userProfile.lastName }}</td>
                        <td>{{ bannedUser.userProfile.firstName }}</td>
                        <td>{{ bannedUser.userProfile.postalCode }}</td>
                        <td>{{ bannedUser.userProfile.city }}</td>
                        <td>{{ bannedUser.email }}</td>
                        <td>
                            <a class="btn btn-view" href="{{ path('app_admin_user_show', {'id': bannedUser.id}) }}">Voir</a>
                            <a class="btn btn-edit" href="{{ path('app_admin_user_edit', {'id': bannedUser.id}) }}">Éditer</a>
                            <a class="btn btn-unban" href="{{ path('app_admin_user_unban', {'id': bannedUser.id}) }}">Débannir</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <style>
        .user-list-container {
            padding: 20px;
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
        }

        h1 {
            color: #333;
            margin-bottom: 20px;
        }

        .user-section {
            margin-bottom: 40px;
        }

        h2 {
            color: #444;
            padding-bottom: 10px;
            margin-bottom: 20px;
        }

        .user-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        .user-table th, .user-table td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #e0e0e0;
        }

        .user-table th {
            background-color: #f1f1f1;
            font-weight: bold;
        }

        .user-table tr:hover {
            background-color: #f9f9f9;
        }

        .btn {
            padding: 8px 12px;
            border-radius: 5px;
            text-decoration: none;
            color: #ffffff;
            margin-right: 5px;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

        .btn-view {
            background-color: #007bff;
        }

        .btn-edit {
            background-color: #28a745;
        }

        .btn-ban {
            background-color: #dc3545;
        }

        .btn-unban {
            background-color: #ffc107;
        }

        .btn:hover {
            opacity: 0.8;
        }
    </style>
{% endblock %}
