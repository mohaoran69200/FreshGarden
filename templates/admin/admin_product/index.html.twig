{% extends 'admin/base_admin.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <div class="product-index-container">
        <h1>Liste des Annonces</h1>

        <div class="table-header">
            <a class="btn btn-create" href="{{ path('app_product_new') }}">Créer un nouveau produit</a>
        </div>

        <table class="product-table">
            <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Prix</th>
                <th>Unité</th>
                <th>Stock</th>
                <th>Créé le</th>
                <th>Mis à jour le</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.id }}</td>
                    <td>{{ product.name }}</td>
                    <td>{{ product.price|number_format(2, ',', ' ') }} €</td>
                    <td>{{ product.unit.value }}</td>
                    <td>{{ product.stock }}</td>
                    <td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ product.updatedAt ? product.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ product.description }}</td>
                    <td>
                        <a class="btn btn-show" href="{{ path('app_product_show', {'id': product.id}) }}">Voir</a>
                        <a class="btn btn-edit" href="{{ path('app_product_update', {'id': product.id}) }}">Éditer</a>
                        <a class="btn btn-delete" href="{{ path('app_product_remove', {'id': product.id}) }}"
                        onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette annonce ?')">Supprimer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="9" class="no-records">Aucun enregistrement trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
